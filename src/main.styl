@import '../node_modules/nib'

html, body
	height 100%
	
body
	background #262838
	color white
	font-family 'Source Sans Pro', Open Sans, Helvetica, Sans
	
.navbar-inverse.transparent
	background-color transparent
	border-color transparent
	
main
	padding-top 71px
	
.test-enter, .test-leave 
	opacity 0
	transform translate3d(10px, 0, 0)

.view
	transition all .4s ease
	&.v-enter
		opacity 0
		transform translate3d(100px, 0, 0)
	&.v-leave
		opacity 0
		transform translate3d(-100px, 0, 0)